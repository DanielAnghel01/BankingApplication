@using BankingApplication.Views.Dtos;
@model BankingApplication.Models.BankAccount

@{
    ViewData["Title"] = "Create Bank Account";
}

<div class="pl-64">
    <h1>Create Bank Account</h1>

    <h4>Enter Account Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Optional: Account Holder Name -->
                <div class="form-group">
                    <label asp-for="AccountHolderName" class="control-label">Account Holder Name</label>
                    <input asp-for="AccountHolderName" class="form-control" />
                    <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                </div>

                <!-- Required: Initial Balance -->
                <div class="form-group">
                    <label asp-for="Balance" class="control-label">Initial Deposit</label>
                    <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>

                <!-- Required: Account Type Dropdown -->
                <div class="form-group">
                    <label asp-for="AccountType" class="control-label">Account Type</label>
                    <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<AccountType>()">
                        <option value="">-- Select Account Type --</option>
                    </select>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Back to Profile</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
