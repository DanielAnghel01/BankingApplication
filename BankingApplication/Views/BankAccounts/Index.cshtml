@model IEnumerable<BankingApplication.Models.BankAccount>

@{
    ViewData["Title"] = "Bank Accounts";
}

<div class="pl-64">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Bank Accounts</h1>
        <a asp-action="Create" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            ➕ Create New
        </a>
    </div>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg p-6">
        <table class="min-w-full table-auto">
            <thead class="bg-gray-200">
                <tr>
                    <th class="text-left p-3 font-semibold text-gray-700">Account Number</th>
                    <th class="text-left p-3 font-semibold text-gray-700">Balance</th>
                    <th class="text-left p-3 font-semibold text-gray-700">Account Type</th>
                    <th class="text-left p-3 font-semibold text-gray-700">User</th> <!-- NEW COLUMN -->
                    <th class="text-left p-3 font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="p-3">@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                        <td class="p-3">@Html.DisplayFor(modelItem => item.Balance)</td>
                        <td class="p-3">@Html.DisplayFor(modelItem => item.AccountType)</td>
                        <td class="p-3">@item.UserId</td> <!-- SHOW USER ID OR NAME -->
                        <td class="p-3 space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:underline">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-green-600 hover:underline">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
