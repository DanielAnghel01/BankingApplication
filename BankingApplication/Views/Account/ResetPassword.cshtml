@{
    ViewData["Title"] = "Reset Password";
}

<main role="main" class="flex-grow flex items-center justify-center p-10 pl-80">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-semibold text-blue-900 text-center mb-5">🔑 Reset the password to Your Account</h2>

        <form action="/Account/ResetPassword" method="POST" class="space-y-5">
            <div>
                <label for="email" class="block text-gray-700 font-medium">Email Address</label>
                <input type="email" id="email" name="email" required
                       class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <div>
                <label for="password" class="block text-gray-700 font-medium">New Password</label>
                <input type="password" id="password" name="password" required
                       class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <div>
                <label for="password" class="block text-gray-700 font-medium">New Password Again</label>
                <input type="password" id="password" name="password" required
                       class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <button type="submit"
                    class="w-full bg-blue-900 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                Reset password
            </button>
        </form>
    </div>
</main>

