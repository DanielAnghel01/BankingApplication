@using BankingApplication.Views.Dtos
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<main role="main" class="flex-grow flex items-center justify-center p-10 pl-80">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-semibold text-blue-900 text-center mb-5">🔑 Login to Your Account</h2>

        <form asp-action="Login" asp-controller="Account" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div>
                <label for="email" class="block text-gray-700 font-medium">Email Address</label>
                <input asp-for="Email" type="email" id="email" name="email" required
                       class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <div>
                <label for="password" class="block text-gray-700 font-medium">Password</label>
                <input asp-for="Password" type="password" id="password" name="password" required
                       class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <div class="flex items-center">
                <input asp-for="RememberMe" type="checkbox" id="remember" name="remember" class="mr-2">
                <label for="remember" class="text-gray-700">Remember Me</label>
            </div>

            <button type="submit"
                    class="w-full bg-blue-900 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                Login
            </button>

            <div class="text-center mt-4">
                <a href="/Account/ResetPassword" class="text-blue-600 hover:underline">Forgot Password?</a>
                <span class="text-gray-400 mx-2">|</span>
                <a href="/Account/Register" class="text-blue-600 hover:underline">Create an Account</a>
            </div>
        </form>
    </div>
</main>

