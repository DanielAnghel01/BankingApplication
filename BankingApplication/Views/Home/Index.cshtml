@{
    ViewData["Title"] = "Home Page";
}
<main role="main" class="flex-grow p-10 pl-80">
    <section class="mb-10">
        <h3 class="text-2xl font-semibold text-blue-900">Welcome to Apex Dynamic Bank</h3>
        <p class="text-gray-700 mt-3">
            At Apex Dynamic Bank, we offer innovative financial solutions to help you manage your money effectively. Whether you’re looking to open a new account, transfer funds, or explore our dynamic dashboard, we’ve got you covered.
        </p>
    </section>

    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-10">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h4 class="text-xl font-semibold text-blue-900">Secure Accounts</h4>
            <p class="text-gray-600 mt-3">
                Protect your savings and investments with our secure, insured accounts designed to keep your money safe.
            </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h4 class="text-xl font-semibold text-blue-900">Easy Transfers</h4>
            <p class="text-gray-600 mt-3">
                Effortlessly transfer funds between accounts, pay bills, and manage your transactions with ease.
            </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <h4 class="text-xl font-semibold text-blue-900">Personalized Banking</h4>
            <p class="text-gray-600 mt-3">
                Enjoy a tailored banking experience with personalized recommendations and financial tools.
            </p>
        </div>
    </section>

    <section class="bg-blue-900 text-white p-8 rounded-lg mb-10">
        <h3 class="text-2xl font-semibold">Get Started Today!</h3>
        <p class="mt-3 text-gray-300">
            Open a new account with Apex Dynamic Bank and enjoy a range of services that cater to all your banking needs.
        </p>
        <div class="mt-5">
            <a href="/Account/Register" class="bg-yellow-500 text-blue-900 py-2 px-6 rounded-full hover:bg-yellow-400">Open Account</a>
        </div>
    </section>
</main>



